<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.echocloud.mapper.IUsersDao">

	<insert id="addUsers" parameterType="Users">
		<![CDATA[
			insert into USERS
(user_id,user_name,user_pass,real_name,user_sex,user_mail,user_phone,reg_date,user_type,nick_name)
				values(#{user_id},#{user_name},#{user_pass},#{real_name},#{user_sex},#{user_mail},#{user_phone},to_date(#{reg_date},'YYYY-MM-DD HH24:MI:SS'),#{user_type},#{nick_name})
		]]>
	</insert>

	<delete id="delUsers" parameterType="String">
		<![CDATA[
			delete from USERS where user_id=#{user_id}
		]]>
	</delete>

	<delete id="delUserss">
		<![CDATA[
			delete from USERS where user_id in 
		]]>
		<foreach collection="array" item="user_ids"  open="(" separator="," close=")">
			#{user_ids}
		</foreach>
	</delete>

	<update id="updateUsers" parameterType="Users">
		<![CDATA[
			UPDATE USERS
		]]>
		<set>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				user_name = #{user_name},
			]]>
			</if>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				user_pass = #{user_pass},
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				real_name = #{real_name},
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				nick_name = #{nick_name},
			]]>
			</if>
			<if test="user_sex!=0">
			<![CDATA[
				user_sex = #{user_sex},
			]]>
			</if>
			<if test="user_mail!=null and user_mail!=''">
			<![CDATA[
				user_mail = #{user_mail},
			]]>
			</if>
			<if test="user_phone!=null and user_phone!=''">
			<![CDATA[
				user_phone = #{user_phone},
			]]>
			</if>
		</set>
		<![CDATA[
			where user_id = #{user_id}
		]]>
	</update>

	<select id="getUsers" parameterType="Users" resultType="Users">
		<![CDATA[
			SELECT t.* 
			       ,to_char(reg_date,'YYYY-MM-DD HH24:MI:SS') reg_date_show 
			  FROM USERS t
		]]>
		<where>
			<if test="user_id!=null and user_id!=''">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name = #{user_name}
			]]>
			</if>
			<if test="user_pass!=null and user_pass!=''">
			<![CDATA[
				and user_pass = #{user_pass}
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type IN (${user_types})
			]]>
			</if>
		</where>
	</select>

	<select id="listUserss" parameterType="Users" resultType="Users">
		<![CDATA[
			select b.* from (SELECT a.*,rownum rn FROM (
			SELECT t.* 
			       ,to_char(reg_date,'YYYY-MM-DD HH24:MI:SS') reg_date_show 
			  FROM USERS t
		]]>
		<where>
			<if test="user_id!=null and user_id!=''">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				and nick_name like '%${nick_name}%'
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type IN (${user_types})
			]]>
			</if>
		</where>
		<![CDATA[
			order by user_id asc) a) b
		]]>
		<if test="start!=-1">
		<![CDATA[
			where b.rn between ${start+1} and ${end}
		]]>
		</if>
	</select>

	<select id="listUserssCount" parameterType="Users" resultType="int">
		<![CDATA[
			SELECT count(*) FROM USERS
		]]>
		<where>
			<if test="user_id!=null and user_id!=''">
			<![CDATA[
				user_id = #{user_id}
			]]>
			</if>
			<if test="user_name!=null and user_name!=''">
			<![CDATA[
				and user_name like '%${user_name}%'
			]]>
			</if>
			<if test="real_name!=null and real_name!=''">
			<![CDATA[
				and real_name like '%${real_name}%'
			]]>
			</if>
			<if test="nick_name!=null and nick_name!=''">
			<![CDATA[
				and nick_name like '%${nick_name}%'
			]]>
			</if>
			<if test="user_type!=0">
			<![CDATA[
				and user_type = #{user_type}
			]]>
			</if>
			<if test="user_types!=null and user_types!=''">
			<![CDATA[
				and user_type IN (${user_types})
			]]>
			</if>
		</where>
	</select>

</mapper>
